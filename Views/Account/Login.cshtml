@{
    ViewBag.Title = "Iniciar sesión";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Ingrese las credenciales para iniciar sesión.</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Usuario", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="text" name="cd_usuario" id="cd_usuario" value="@ViewBag.cd_usuario" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Contraseña", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="password" name="tx_contrasena" id="tx_contrasena" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
            </div>
        </div>
         <div class="form-group">
            @if (ViewBag.Resultado != "") { 
            <div class="alert alert-warning alert-danger" role="alert" id="alertaboton">
                <h6>@ViewBag.Resultado</h6>
            </div>
            }
        </div>
        }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}