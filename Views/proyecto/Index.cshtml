@model IEnumerable<CostosObras.Models.proyecto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Cliente
        </th>

        <th>
            Costo total
        </th>
        <th>
            Adicionales
        </th>
        <th>
            Costo real
        </th>
        <th>
            Archivo presupuesto
        <th>
            Fecha fin
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.observacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cliente.descripcion)
    </td>
    <td>
        @Convert.ToString(string.Format("{0:c2}", item.costototal))
    </td>
    <td>
        @Convert.ToString(string.Format("{0:c2}", item.adicionales.Sum(i => i.monto)))
    </td>
    <td>
        @Convert.ToString(string.Format("{0:c2}", item.costoreal))
    </td>
    <td>
        @Html.ActionLink("Descargar", "Descargar", new {id= item.id })
    </td>
    <td>
        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.fechafin))
    </td>
    <td>
        @Html.ActionLink("Adicionales", "Index","Adicionales", new { idproyecto = item.id },null) 
        
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
    </td>
</tr>
}



</table>
